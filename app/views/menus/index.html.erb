<div class="page-header">
  <h1>
    Menus
    <a href="/menus/new" class="btn btn-lg btn-success">New Menu</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Restaurant</th>
        <th>Actions</th>
      </tr>

      <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.restaurant.name %></td>
        <td>
          <a href="/menus/<%= menu.id %>" class="btn btn-primary">Show</a>
          <a href="/menus/<%= menu.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_menu/<%= menu.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @menus, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
