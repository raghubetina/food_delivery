<!-- Validation failure messages -->
<% if @bookmark.errors.any? %>
  <% @bookmark.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Bookmark</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_bookmark" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for food_item_id -->
      <div class="form-group">
        <label for="food_item_id" class="control-label">
          Food item
        </label>

        <%= select_tag(:food_item_id, options_from_collection_for_select(FoodItem.all, :id, :menu_id, @bookmark.food_item_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Bookmark
      </button>
      or
      <a href="/bookmarks">Cancel</a>
    </form>
  </div>
</div>
